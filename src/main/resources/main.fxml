<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.media.MediaView?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mainPackage.MainController">
    <center>
        <SplitPane fx:id="mainSplitPane" dividerPositions="0.5, 0.5">
            <items>
                <TreeView fx:id="fileBrowserTreeTable" prefHeight="200.0" prefWidth="200.0">
                </TreeView>
                <TableView fx:id="mainTableView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn prefWidth="75.0" text="C1"/>
                        <TableColumn prefWidth="75.0" text="C2"/>
                    </columns>
                </TableView>
                <ScrollPane fx:id="rightPaneScrollPane" fitToHeight="true" fitToWidth="true" prefViewportHeight="329.0"
                            prefViewportWidth="281.0">
                    <content>
                        <VBox fx:id="rightSidePaneVBox" prefHeight="200.0" prefWidth="100.0" spacing="10">
                            <children>
                                <VBox fx:id="rightSidePaneTextVBox" spacing="8">
                                    <children>
                                        <TextFlow fx:id="textFlowRightPane">
                                            <children>
                                                <Text fx:id="fileNamDetailLabel" styleClass="detailLabels"
                                                      text="File: "/>
                                                <Text fx:id="fileNamDetailLabelContent"/>
                                            </children>
                                        </TextFlow>
                                        <TextFlow>
                                            <children>
                                                <Text fx:id="sizeLabel" styleClass="detailLabels" text="Size: "/>
                                                <Text fx:id="sizeDetailLabelContent"/>
                                            </children>
                                        </TextFlow>

                                        <TextFlow>
                                            <children>
                                                <Text fx:id="pathLabel" styleClass="detailLabels" text="Path: "/>
                                                <Text fx:id="pathLabelContent"/>
                                            </children>
                                        </TextFlow>

                                        <TextFlow>
                                            <children>
                                                <Text fx:id="lastModifiedLabel" styleClass="detailLabels"
                                                      text="Last Modified: "/>
                                                <Text fx:id="lastModifiedLabelContent"/>
                                            </children>
                                        </TextFlow>

                                        <TextFlow>
                                            <children>
                                                <Text fx:id="textLabel" styleClass="detailLabels"/>
                                            </children>
                                        </TextFlow>


                                        <TextFlow>
                                            <children>
                                                <Text fx:id="textContent"/>
                                            </children>
                                        </TextFlow>


                                    </children>
                                </VBox>


                                <StackPane fx:id="mediaStackPane">
                                    <children>
                                        <VBox fx:id="imagesVBox">
                                            <children>
                                                <ImageView fx:id="rightPaneImageView" pickOnBounds="true"
                                                           preserveRatio="true"/>

                                            </children>
                                        </VBox>

                                        <MediaView fx:id="rightPaneMediaView" preserveRatio="true"/>
                                        <FlowPane fx:id="mediaPlayerControls" prefHeight="100.0" prefWidth="200.0"
                                              visible="false">
                                            <children>
                                                <Button id="2xslower" fx:id="play2XSlowerButton" mnemonicParsing="false"
                                                        styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Play 2x Slower"/>
                                                    </tooltip>
                                                </Button>
                                                <Label fx:id="mediaPlayerRateLabel" styleClass="rateLabel" text="1x"/>
                                                <Button id="2xfaster" fx:id="play2XFasterButton" mnemonicParsing="false"
                                                        styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Play 2x Faster"/>
                                                    </tooltip>
                                                </Button>
                                                <Slider fx:id="volumeSlider" max="1" orientation="HORIZONTAL">
                                                    <tooltip>
                                                        <Tooltip text="Adjust Volume"/>
                                                    </tooltip>
                                                </Slider>
                                                <Button id="playMedia" fx:id="playMediaButton"
                                                        styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Play Media"/>
                                                    </tooltip>
                                                </Button>
                                                <Button onMouseClicked="#rewindToStart" id="rewind"
                                                        styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip
                                                                text="Rewind with Single Click, Previous Media with Double Click"/>
                                                    </tooltip>
                                                </Button>
                                                <Button onAction="#playNext" id="next" styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Play Next Media"/>
                                                    </tooltip>
                                                </Button>
                                                <ToggleButton id="loopMedia" fx:id="loopButton"
                                                              styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Loop Currently Playing Media"/>
                                                    </tooltip>
                                                </ToggleButton>
                                                <Button id="fullScreen" fx:id="fullScreenMediaButton"
                                                        onAction="#maximizeVideo" styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Maximize Media Player Pane"/>
                                                    </tooltip>
                                                </Button>
                                                <Button id="oldSize" fx:id="normalScreenMediaButton"
                                                        onAction="#returnToOldDividers" styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Return to Old Pane Sizes"/>
                                                    </tooltip>
                                                </Button>
                                                <ToggleButton fx:id="lockMediaViewMediaControlsToggle" id="lock"
                                                              styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Keep Current Media Playing in Right Pane"/>
                                                    </tooltip>
                                                </ToggleButton>
                                                <ToggleButton fx:id="autoPlayMediaControl" styleClass="mediaButtons"
                                                              id="autoplay" onAction="#storeFileList">
                                                    <tooltip>
                                                        <Tooltip text="Automatically Play Next Media In Table"/>
                                                    </tooltip>
                                                </ToggleButton>
                                                <ToggleButton fx:id="removeSliderMediaControl"
                                                              onAction="#removeSliderHBox" styleClass="mediaButtons"
                                                              id="hide">
                                                    <tooltip>
                                                        <Tooltip text="Hide Slider"/>
                                                    </tooltip>
                                                </ToggleButton>
                                                <ToggleButton fx:id="showReflectionButton" onAction="#showReflection"
                                                              id="reflection" styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Show Reflection For Images and Videos."/>
                                                    </tooltip>
                                                </ToggleButton>
                                                <ToggleButton fx:id="fitScreenToggleMediaButton" id="fitScreen" styleClass="mediaButtons">
                                                    <tooltip>
                                                        <Tooltip text="Maximize to fit Screen Dimensions."/>

                                                    </tooltip>
                                                </ToggleButton>

                                                <Label fx:id="fileNameLabelMediaControls" styleClass="blackBoxWhiteText"
                                                       HBox.hgrow="ALWAYS"
                                                       visible="false"/>

                                            </children>
                                        </FlowPane>
                                        <Label fx:id="volumeAndCurrentTimeSwipeLabel" styleClass="blackBoxWhiteText"
                                               visible="false"/>

                                    </children>
                                </StackPane>
                                <HBox fx:id="sliderHbox">
                                    <children>
                                        <Label fx:id="currentTimeLabel" alignment="CENTER"/>
                                        <Slider fx:id="playPositionSlider" blockIncrement="1.0" max="1"
                                                visible="false"/>
                                        <Label fx:id="totalTimeLabel" alignment="CENTER"/>
                                    </children>
                                </HBox>


                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
    </center>
    <top>
        <VBox>
            <children>
                <MenuBar fx:id="menuBar">
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem accelerator="Meta+W" mnemonicParsing="false" text="Close"/>
                                <MenuItem accelerator="Meta+," mnemonicParsing="false" text="Settings"/>

                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete"/>
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About"/>
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <HBox fx:id="topHBox" prefHeight="45.0" prefWidth="600.0" spacing="2" BorderPane.alignment="CENTER">
                    <children>

                        <Label text="Filter:"/>
                        <MenuButton fx:id="menuButtonAdd" mnemonicParsing="false" text="Add">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#addFilter" text="+ Or"/>
                                <MenuItem mnemonicParsing="false" onAction="#addFilter" text="+ And"/>
                            </items>
                        </MenuButton>
                        <Button onAction="#removeFilter" text="-"/>
                        <HBox fx:id="filterHBox">
                            <children>
                                <TextField fx:id="mainTextField" prefWidth="100.0" promptText="Search For File"/>
                            </children>
                        </HBox>


                        <Label layoutX="10.0" layoutY="10.0" text="Directory:"/>
                        <TextField fx:id="directoryToSearchTextField" prefHeight="27.0" prefWidth="300.0"
                                   promptText="Source Directory">
                            <tooltip>
                                <Tooltip text="Search For Files in This Directory"/>
                            </tooltip>
                        </TextField>
                        <Button fx:id="searchButton" defaultButton="true" mnemonicParsing="false"
                                onAction="#searchForFile" id="search">
                            <tooltip>
                                <Tooltip text="Filter Files Action"/>
                            </tooltip>
                        </Button>
                        <Button onAction="#findDirectoryInTree" id="tree">
                            <tooltip>
                                <Tooltip text="Show Directory to Search in File Browser"/>
                            </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#chooseDir" id="dialog">
                            <tooltip>
                                <Tooltip text="Choose Directory with System File Chooser"/>
                            </tooltip>
                        </Button>
                        <Button mnemonicParsing="false" text="Move All">
                            <tooltip>
                                <Tooltip text="Move All Filtered Files to Destination Directory"/>
                            </tooltip>
                        </Button>
                        <Button layoutX="515.0" layoutY="10.0" mnemonicParsing="false" text="Delete All">
                            <tooltip>
                                <Tooltip text="Delete All Filtered Files"/>
                            </tooltip>
                        </Button>
                        <Button layoutX="488.0" layoutY="10.0" mnemonicParsing="false" onAction="#copyAllButtonAction"
                                text="Copy All">
                            <tooltip>
                                <Tooltip text="Copy All Filtered Files to Destination Directory"/>
                            </tooltip>
                        </Button>
                        <TextField fx:id="destinationCopyAllTextField" prefWidth="300"
                                   promptText="Destination Directory">
                            <tooltip>
                                <Tooltip text="Destination Directory for Batch Actions"/>
                            </tooltip>
                        </TextField>
                        <Button onAction="#openDestinationFolder" text="Open Destination">
                            <tooltip>
                                <Tooltip text="Browse Destination Directory"/>
                            </tooltip>
                        </Button>
                        <ProgressIndicator fx:id="thinkingIndicator" progress="-1" visible="false">
                            <tooltip>
                                <Tooltip text="Working..."/>
                            </tooltip>
                        </ProgressIndicator>
                        <Button fx:id="stopCurrentSearchButton" text="Stop" visible="false">
                            <tooltip>
                                <Tooltip text="Stop Current Search"/>
                            </tooltip>
                        </Button>
                        <Region HBox.hgrow="ALWAYS"></Region>

                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <bottom>
        <VBox>
            <children>
                <HBox fx:id="bottomHBox" prefHeight="36.0" prefWidth="543.0" spacing="10.0"
                      BorderPane.alignment="CENTER">
                    <children>
                        <Button onAction="#goToHomeDirectory" id="home">
                            <tooltip>
                                <Tooltip text="Find Home Directory in Tree"/>
                            </tooltip>
                        </Button>
                        <Button onAction="#goToDesktopDirectory" id="desktop">
                            <tooltip>
                                <Tooltip text="Find Desktop Directory in Tree"/>
                            </tooltip>
                        </Button>

                        <Button onAction="#goToDownloadsDirectory" id="downloads">
                            <tooltip>
                                <Tooltip text="Find Downloads Directory in Tree"/>
                            </tooltip>
                        </Button>
                        <Button onAction="#collapseAllTreeNodes" id="collapse">
                            <tooltip>
                                <Tooltip text="Collapse Tree"/>
                            </tooltip>
                        </Button>
                        <Button onAction="#refreshTreeView" id="refresh">
                            <tooltip>
                                <Tooltip text="Refresh Tree Items"/>
                            </tooltip>
                        </Button>
                        <CheckBox fx:id="caseInsensitiveMatchingCheckbox" mnemonicParsing="false"
                                  text="Case Insensitive Matching">
                            <tooltip>
                                <Tooltip text="Ignore Case in Filtering Files"/>
                            </tooltip>
                        </CheckBox>
                        <CheckBox fx:id="pathMatchingCheckbox" mnemonicParsing="false" text="Path Matching"/>

                        <CheckBox fx:id="automaticSearchCheckBox" mnemonicParsing="false" text="Automatic Filtering">
                            <tooltip>
                                <Tooltip text="Automatically FilterFiles when Selecting Directory in File Browser"/>
                            </tooltip>
                        </CheckBox>
                        <CheckBox fx:id="selectInTreeViewCheckBox" selected="false" id="tree">
                            <tooltip>
                                <Tooltip text="Select Files in File Browser when Selecting in Table"/>
                            </tooltip>
                        </CheckBox>
                        <CheckBox fx:id="showHiddenFilesCheckBox" mnemonicParsing="false" text="Show Hidden Files">
                            <tooltip>
                                <Tooltip text="Show Hidden Files in Table and File Browser"/>
                            </tooltip>
                        </CheckBox>
                        <CheckBox fx:id="hideDirectoriesCheckBox" text="Hide Directories">
                            <tooltip>
                                <Tooltip text="Filter out Directories from Table"/>
                            </tooltip>
                        </CheckBox>
                        <ToggleButton fx:id="autoplayCheckbox" id="autoplay" onAction="#storeFileList">
                            <tooltip>
                                <Tooltip
                                        text="Automatically Play Next File in Playlist.  Update Playlist to current Table Selection from Right Click Menu"/>
                            </tooltip>
                        </ToggleButton>
                        <ToggleButton fx:id="showPlayingIconCheckbox" onAction="#showPlayingIcon" id="play"
                                      selected="true">
                            <tooltip>
                                <Tooltip text="Change Icon of Playing File in Table"/>
                            </tooltip>
                        </ToggleButton>


                        <ToggleButton fx:id="showPlayingIconTreeCheckbox" onAction="#showPlayingIconTree"
                                      id="playtree"/>


                        <ToggleButton fx:id="showLineNumbersCheckbox" onAction="#showLineNumbers" id="lines">
                            <tooltip>
                                <Tooltip text="Show Line Numbers for Files with Text"/>
                            </tooltip>
                        </ToggleButton>
                        <ToggleButton fx:id="showReflectionBottomButton" onAction="#showReflection" id="reflection"
                                      selected="true">
                            <tooltip>
                                <Tooltip text="Show Reflection For Images and Videos."/>
                            </tooltip>
                        </ToggleButton>
                        <ToggleButton fx:id="lockMediaViewBottomToggle" id="lock">
                            <tooltip>
                                <Tooltip text="Keep Current Media Playing in Right Pane"/>
                            </tooltip>
                        </ToggleButton>
                        <ToggleButton fx:id="fitScreenToggleButton" id="fitScreen">
                            <tooltip>
                                <Tooltip text="Maximize to fit Screen Dimensions."/>

                            </tooltip>
                        </ToggleButton>

                        <HBox>
                            <children>
                                <Button onAction="#openFromRightSidePane" text="Open File">
                                    <tooltip>
                                        <Tooltip text="Open File with Default Program"/>
                                    </tooltip>
                                </Button>
                                <Button onAction="#copyPath" text="Copy Path">
                                    <tooltip>
                                        <Tooltip text="Add File Path to Clipboard"/>
                                    </tooltip>
                                </Button>
                                <Button onAction="#openEnclosing" text="Open Enclosing">
                                    <tooltip>
                                        <Tooltip text="Open Parent Directory"/>
                                    </tooltip>
                                </Button>
                                <Button onAction="#moveToTrash" text="Delete">
                                    <tooltip>
                                        <Tooltip text="Send this File to the Trash"/>
                                    </tooltip>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <HBox fx:id="topSecondHBox">
                    <children>
                        <Label fx:id="activityIndicatorLabel" styleClass="detailLabels" text="Activity" visible="true"/>

                        <Region HBox.hgrow="ALWAYS"/>
                        <Label fx:id="loadingFileLabel" styleClass="detailLabels" text="Activity" visible="true"/>
                        <Separator/>


                        <Label fx:id="numberResultsLabel" styleClass="detailLabelsLarge" text="Results"/>
                    </children>
                </HBox>
            </children>

        </VBox>

    </bottom>
</BorderPane>
